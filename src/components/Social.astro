<script>
    const ele = document.querySelector('.email-text');
    const copyicon = document.getElementById('copy-icon');

    const copyEmail = () => {
        navigator.clipboard.writeText('joaquingenovag8@gmail.com')
        .then(() => {
            ele?.classList.remove('email-text');
            copyicon?.classList.remove('hidden');
            setTimeout(() => {
                copyicon?.classList.add('hidden');
                ele?.classList.add('email-icon');
            }, 1500);
        })
        .catch(() => alert('Error copying email to clipboard: joaquingenovag8@gmail.com'));
    };

    ele?.addEventListener('click', copyEmail);
    document.querySelector('.email-icon')?.addEventListener('click', copyEmail);
</script>

<style>
    .linkedin-icon:hover {
        fill: #0e76a8;
        filter: drop-shadow(0 0 10px #1ba0de); 
        transition: color 0.3s;
    }

    .github-icon:hover {
        fill: #6e5494;
        filter: drop-shadow(0 0 10px #9c77d4);
