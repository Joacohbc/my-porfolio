---
interface Props {
    month: string;
}

const { month } = Astro.props;
---

<article class="text-white text-left mb-10">
    <div class="font-bold text-lg">{month}</div>
    <div class="mr-7 colors">
        <div class="flex flex-row gap-2 items-center justify-start">
            <slot name="name"/>
            <slot name="icon"/>
        </div>
        <slot name="description"/>
    </div>
</article>

<style>
    .colors:hover {
        filter: drop-shadow(0 0 5px #ffff02); 
        transition: color 0.3s;
    }
</style>