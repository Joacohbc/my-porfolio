---
interface Props {
    imageUrl: string;
    title: string;
    skills: string[];
    showSkills?: boolean;
}

const { imageUrl, title, skills } = Astro.props;
---
<div class="image-cert relative cursor-pointer" data-src={imageUrl}>
    <div class="absolute top-0 left-0 w-[100%] h-[100%] flex flex-col justify-center items-center bg-black opacity-0 hover:opacity-100 bg-opacity-75 text-white transition-all duration-300">
        <h3 class="text-sm md:text-md 2xl:text-xl text-center font-bold mx-4 mt-1">{title}</h3> 
        <div slot="skills" class="flex gap-1 flex-col flex-wrap justify-center items-center">
            { skills.map((skill) => (
                <span class="text-white text-center text-xs md:text-md 2xl:text-lg mx-2">{skill}</span>
            ))}
        </div>
        <p class="text-xs text-center mt-3 italic">Click para abrir imagen</p>
    </div>
    <img src={imageUrl} alt={title} class="w-[100%] h-[100%] object-cover transition-all"/>
</div>
