---
interface Props {
    title: string;
    link: string;
}

const { title, link } = Astro.props;
---

<article class="flex flex-col gap-3 items-center project-card bg-transparent">
    <a href={link}  target="_blank">
        <div class="flex flex-col gap-2 justify-center items-start mb-5">
            <h2 class="text-2xl font-bold text-white">{title}</h2>
            <slot name="description" />
        </div>
        <slot name="icons" />
    </a>
</article>

<style>
    .project-card {
        border: 1px solid #3ca2eb;    
        padding: 1rem;
        border-radius: 10px;
    }

    .project-card:hover {    
        filter: drop-shadow(0 0 5px #3ca2eb); 
        transition: color 0.3s;
    }
</style>
