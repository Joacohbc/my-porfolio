---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a class="flex flex-row items-center gap-2 hover:drop-shadow-sm p-2 rounded" href={href}>
    <slot />
</a>

<style>
    a:hover {
        background-color: #0095ff;
        opacity: 0.7;
        transform: scale(1.05) translate(0, -2px);
        transition: all 0.3s;
    }

</style>