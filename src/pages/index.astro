---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../sections/AboutMeSection.astro";
import Projects from "../sections/ProjectsSection.astro";
import Career from "../sections/CareerSection.astro";
import Footer from "../components/Footer.astro";
import sections from "../jsons/index_sections.json";
import SVGs from "../components/threejs/SVGs.astro";
---

<Layout title="Porfolio de Joaquin G." navItems={sections} indexed cfCaptcha header>
    <section id="about-me" data-section="about-me" class="scroll-m-20">
        <main  class="animate-fade-down animate-once animate-ease-linear mb-24">
            <AboutMe />
        </main>
    </section>
    <section id="projects" data-section="projecs" class="scroll-m-20 mb-24">
        <Projects/>
    </section>
    <section id="career" data-section="career" class="scroll-m-20 mb-1">
        <Career />
    </section>

    <section id="moreInfo" data-section="moreInfo" class="scroll-m-20 mt-5">
        <div class="flex flex-row gap-2 justify-center items-center text-lg md:text-5xl font-serif font-bold text-center text-white 
            hover:drop-shadow-sm p-2 rounded underline-animation">
            <a aria-label="M치s informaci칩n" href="/moreInfo">M치s informaci칩n</a>
            <svg class="w-8" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 13a3 3 0 1 0 0 -6a3 3 0 0 0 0 6z" />
                <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />
                <path d="M6 20.05v-.05a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v.05" />
            </svg>
        </div>
    </section>
    <Footer />
</Layout>

<style>
    .underline-animation::after {
        content: "";
        position: absolute;
        transform: scaleX(0);
        width: 100%;
        height: 2px;
        bottom: 0;
        left: 0;
        transform-origin: left right;
        transition: transform 0.3s ease-out;
    }

    .underline-animation:hover {
        font-weight: bold;
        filter: drop-shadow(0 0 5px #eb8b3c);
        transition: color 0.3s;
    }

    .underline-animation:hover::after {
        transform: scaleX(1);
        transform-origin: right left;
        background-color: white;
    }
</style>
