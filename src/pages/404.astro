---
import Layout from "../layouts/Layout.astro"
---

<Layout header={false} title="Not Found">
    <div class="flex flex-col items-center justify-center h-svh">
        <a href="/" class="shadow-border flex flex-col items-center justify-center gap-2">
            <svg class="w-32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 16v.01" />
                <path d="M12 13a2 2 0 0 0 .914 -3.782a1.98 1.98 0 0 0 -2.414 .483" />
                <path d="M10 20.777a8.942 8.942 0 0 1 -2.48 -.969" />
                <path d="M14 3.223a9.003 9.003 0 0 1 0 17.554" />
                <path d="M4.579 17.093a8.961 8.961 0 0 1 -1.227 -2.592" />
                <path d="M3.124 10.5c.16 -.95 .468 -1.85 .9 -2.675l.169 -.305" />
                <path d="M6.907 4.579a8.954 8.954 0 0 1 3.093 -1.356" />
            </svg>
            <p class="text-white text-4xl font-serif text-center uppercase">Page not found</p>
            <div class="flex flex-row gap-2 items-center">
                <p class="text-white text-3xl font-serif text-center">Regresar</p>
                <svg class="w-11" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1" />
                </svg>
            </div>
        </a>
    </div>
</Layout>

<style>
    .shadow-border {
        filter: drop-shadow(0 0 15px #3ca2eb); 
        transition: color 0.3s;
    }

    .shadow-border:hover {
        filter: drop-shadow(0 0 15px #eb8b3c); 
        transition: color cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.3s;
        scale: 1.05;
    }
</style>