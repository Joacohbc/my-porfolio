<script>
    document.addEventListener('astro:page-load', () => {
        const disableIcons = document.querySelectorAll('.disabled-icon');
        disableIcons.forEach(icon => {
            let id;
            icon.addEventListener('click', () => {
                clearTimeout(id);
                const toast = document.querySelector('#in-progress-toast');
                toast.classList.remove('hidden');
                id = setTimeout(() => {
                    toast.classList.add('hidden');
                }, 3000);
            })
        })
    })
</script>