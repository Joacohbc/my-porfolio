---
import Header from '../components/Header.astro';
import SpeadInsights from "@vercel/speed-insights/astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Porfolio de Joaquin Genova</title>
		<meta name="description" content="Porfolio de Joaquin Genova, un apasionado Desarrollador de Software y Tenico Superior en TI" />
		
		<meta name="robots" content="index, follow">

		<!-- HTML Meta Tags -->
		<title>Porfolio de Joaquin Genova - Desarollador de Software y Tenico Superior en TI</title>
		<meta name="description" content="Porfolio de Joaquin Genova, un apasionado Desarrollador de Software y Tenico Superior en TI">

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://joacohbc-porfolio.vercel.app">
		<meta property="og:type" content="website">
		<meta property="og:title" content="Porfolio de Joaquin Genova - Desarollador de Software y Tenico Superior en TI">
		<meta property="og:description" content="Porfolio de Joaquin Genova, un apasionado Desarrollador de Software y Tenico Superior en TI">
		<meta property="og:image" content="">
		<meta property="og:site_name" content="Porfolio de Joaquin Genova">
		<meta property="og:locale" content="es_ES">

		<link rel="canonical" href="https://joacohbc-porfolio.vercel.app" />
		<link rel="alternate" href="https://joacohbc-porfolio.vercel.app" hreflang="es" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="joacohbc-porfolio.vercel.app">
		<meta property="twitter:url" content="https://joacohbc-porfolio.vercel.app">
		<meta name="twitter:title" content="Porfolio de Joaquin Genova - Desarollador de Software y Tenico Superior en TI">
		<meta name="twitter:description" content="Porfolio de Joaquin Genova, un apasionado Desarrollador de Software y Tenico Superior en TI">
		<meta name="twitter:image" content="">

		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body class="bg-lightblack">
		<Header/>
		<div class="w-10/12 md:w-8/12 mx-auto">
			<slot />
		</div> 
		<SpeadInsights />
	</body>
</html>

<style is:global>
	:root {
		--color-bg-lightblack: #131313;
		--color-bg-darkblack: #0f0f0f;
	}

	html { 
		scroll-behavior: smooth; 
		overflow-x: hidden;
	}

	@font-face {
        font-family: "Anta";
        src: url("/fonts/Anta-Regular.woff2");
    }
	
	.font-anta {
		font-family: "Anta", sans-serif;
	}

	@Font-face {
		font-family: "Noto Sans";
		src: url("/fonts/NotoSansMono.woff2");
	}

	.font-noto-sans {
		font-family: "Noto Sans", monospace;
	}
</style>
