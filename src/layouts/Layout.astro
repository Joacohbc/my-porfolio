---
import Header from '../components/Header.astro';
import SpeadInsights from "@vercel/speed-insights/astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Joaquin Genova's Porfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-lightblack">
		<SpeadInsights />
		<Header/>
		<div class="w-10/12 md:w-8/12 mx-auto">
			<slot />
		</div> 
	</body>
</html>

<style is:global>
	:root {
		--color-bg-lightblack: #131313;
		--color-bg-darkblack: #0f0f0f;
	}

	html { 
		scroll-behavior: smooth; 
		overflow-x: hidden;
	}

	@font-face {
        font-family: "Anta";
        src: url("/fonts/Anta-Regular.woff2");
    }
	
	.font-anta {
		font-family: "Anta", sans-serif;
	}

	@Font-face {
		font-family: "Noto Sans";
		src: url("/fonts/NotoSansMono.woff2");
	}

	.font-noto-sans {
		font-family: "Noto Sans", monospace;
	}
</style>
